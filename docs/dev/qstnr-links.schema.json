{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://rpkg.dev/qstnr/qstnr-links.schema.json",
  "title": "qstnr item links specification",
  "description": "qstnr specification part: Markdown reference-style questionnaire item links",
  "type": "object",
  "properties": {
    "link": {
      "description": "questionnaire item links",
      "type": "array",
      "items": {
        "description": "questionnaire item link definition",
        "type": "object",
        "properties": {
          "id": {
            "description": "label that uniquely identifies the Markdown reference-style link; cf. https://pandoc.org/MANUAL.html#reference-links",
            "type": "string",
            "minLength": 1
          },
          "url": {
            "description": "URL to the link destination",
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["id", "url"],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": ["link"],
  "additionalProperties": false
}
