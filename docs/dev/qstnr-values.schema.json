{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://rpkg.dev/qstnr/qstnr-values.schema.json",
  "title": "qstnr item value definitions specification",
  "description": "qstnr specification part: questionnaire item value definitions",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z_][A-Za-z0-9_]*$": {
      "type": "object",
      "properties": {
        "id": {
          "description": "value set identifier",
          "type": "string",
          "pattern": "^[A-Za-z_][A-Za-z0-9_.{}]*$"
        },
        "values": { "$ref": "https://rpkg.dev/qstnr/qstnr-item-values.schema.json" },
        "value_scale": { "$ref": "https://rpkg.dev/qstnr/qstnr-item-value_scale.schema.json" }
      },
      "required": ["id", "values", "value_scale"],
      "additionalProperties": false
  },
  "minProperties": 1,
  "additionalProperties": false
}
