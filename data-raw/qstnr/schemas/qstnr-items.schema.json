{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://qstnr.rpkg.dev/dev/schemas/qstnr-items.schema.json",
  "title": "qstnr items specification",
  "description": "qstnr specification part: questionnaire items",
  "type": "object",
  "patternProperties": {
    "^[A-Za-z_][A-Za-z0-9_]*$": {
      "type": "object",
      "properties": {
        "i": {
          "description": "item iterator(s)",
          "type": "array",
          "minItems": 1,
          "uniqueItems": true
        },
        "id": { "$ref": "https://qstnr.rpkg.dev/dev/schemas/subschemas/qstnr-item-id.schema.json" },
        "name": {
          "description": "item name",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "string",
              "minLength": 1
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "description": {
          "description": "item description",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "string",
              "minLength": 1
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "question_block":  {
          "description": "item question block",
          "allOf": [{ "$ref": "https://qstnr.rpkg.dev/dev/schemas/subschemas/qstnr-id_ref.schema.json" }]
        },
        "question": {
          "description": "item question",
          "type": "object",
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "string",
              "minLength": 1
            }
          },
          "minProperties": 1,
          "additionalProperties": false
        },
        "values": { "$ref": "https://qstnr.rpkg.dev/dev/schemas/subschemas/qstnr-item-values.schema.json" },
        "value_scale": { "$ref": "https://qstnr.rpkg.dev/dev/schemas/subschemas/qstnr-item-value_scale.schema.json" },
        "value_sets": {
          "description": "reference(s) to value set identifier(s)",
          "type": "array",
          "items": { "$ref": "https://qstnr.rpkg.dev/dev/schemas/subschemas/qstnr-id_ref.schema.json" },
          "minItems": 1,
          "uniqueItems": true,
          "default": [ "values" ]
        },
        "targets": { "$ref": "https://qstnr.rpkg.dev/dev/schemas/subschemas/qstnr-item-targets.schema.json" },
        "is_mandatory": {
          "description": "whether answering the item is mandatory or can be skipped",
          "type": "boolean",
          "default": false
        },
        "allow_multiple_answers": {
          "description": "whether multiple answer choices are allowed or the item is limited to a single answer choice",
          "type": "boolean",
          "default": false
        },
        "remarks": {
          "description": "additional remarks about the item",
          "type": "string"
        }
      },
      "dependencies": {
        "values": ["value_scale"]
      },
      "required": ["id", "name", "description", "targets"],
      "additionalProperties": false
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
